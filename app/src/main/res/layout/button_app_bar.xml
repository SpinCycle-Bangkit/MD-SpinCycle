<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomappbar.BottomAppBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:backgroundTint="#F6F5F5"
    tools:ignore="BottomAppBar">

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_home_grey"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btnFav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_favorite_grey"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btnHistory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_history_grey"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btnAcc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_profile_grey"
        tools:ignore="ContentDescription" />

</com.google.android.material.bottomappbar.BottomAppBar>